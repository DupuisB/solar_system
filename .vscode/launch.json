{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "./src/build/tpOpenGL",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build", // This runs the build task before launching
        "miDebuggerPath": "/usr/bin/gdb",
        "logging": {
          "trace": true,
          "traceResponse": true,
          "engineLogging": true
        }
      }
    ]
  }